<UserControl x:Class="wpf_tmca.View.UserControls.Statusbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:wpf_tmca.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StatusBar BorderBrush="Black" BorderThickness="0,0.3,0,0">
        <TextBlock Text="{Binding StatusBarMsg}" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </StatusBar>
</UserControl>
