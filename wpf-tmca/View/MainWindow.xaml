<Window x:Class="wpf_tmca.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:userControls="clr-namespace:wpf_tmca.View.UserControls"
        xmlns:viewModel="clr-namespace:wpf_tmca.ViewModel"
        xmlns:local="clr-namespace:wpf_tmca"
        mc:Ignorable="d"
        Title="TMCA UML Editor" Height="600" Width="800" Icon="/Images/Holidays-Bat-icon.png">
    <Window.DataContext>
        <viewModel:MainViewModel />
    </Window.DataContext>
    <DockPanel>
        <userControls:Menubar DockPanel.Dock="Top"/>
        <userControls:Toolbar DockPanel.Dock="Top"/>
        <userControls:Statusbar DockPanel.Dock="Bottom"/>
        <userControls:Toolbox DockPanel.Dock="Left" />
        <Canvas Name="myCanvas" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" AllowDrop="True">
            <!-- Canvas items here... -->
        </Canvas>
    </DockPanel>
</Window>
