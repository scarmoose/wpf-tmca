<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:items="clr-namespace:wpf_tmca.ViewModel.Items"
                    xmlns:a="clr-namespace:wpf_tmca.ViewModel.Associations"
                    xmlns:uc="clr-namespace:wpf_tmca.View.UserControls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ItemStyleDictionary.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <DataTemplate DataType="{x:Type items:ClassViewModel}">
        <uc:Class Style="{StaticResource ClassControl}"/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type a:DependencyViewModel}">
        <uc:Class Style="{StaticResource Dependency}"/>
    </DataTemplate>

</ResourceDictionary>